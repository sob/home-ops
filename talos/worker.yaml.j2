---
version: v1alpha1
debug: false
persist: true
machine:
  type: worker
  token: op://STONEHEDGES/talos/MACHINE_TOKEN
  ca:
    crt: op://STONEHEDGES/talos/MACHINE_CA_CRT
    key: ""
  certSANs: ["10.1.100.100"]
  kubelet:
    image: ghcr.io/siderolabs/kubelet:{{ ENV.KUBERNETES_VERSION }}
    defaultRuntimeSeccompProfileEnabled: true
    disableManifestsDirectory: true
    extraArgs:
      rotate-server-certificates: "true"
    extraMounts:
      - destination: /var/openebs/local
        type: bind
        source: /var/openebs/local
        options: ["bind", "rshared", "rw"]
    nodeIP:
      validSubnets: ["10.1.100.0/24"]
  network:
    interfaces:
      - deviceSelector:
          hardwareAddr: 94:c6:91:*
        mtu: 1500
        dhcp: true
        routes:
          - network: 0.0.0.0/0
            gateway: 10.1.100.1
    disableSearchDomain: true
  install:
    disk: /dev/sda
    image: ghcr.io/siderolabs/installer:{{ ENV.TALOS_VERSION }}
    wipe: false
    extraKernelArgs:
      - net.ifnames=1
  files:
    - content: |
        [plugins."io.containerd.grpc.v1.cri"]
          enable_unprivileged_ports = true
          enable_unprivileged_icmp = true
        [plugins."io.containerd.grpc.v1.cri".containerd]
          discard_unpacked_layers = false
        [plugins."io.containerd.grpc.v1.cri".containerd.runtimes.runc]
          discard_unpacked_layers = false
      permissions: 0o0
      path: /etc/cri/conf.d/20-customization.part
      op: create
  sysctls:
    fs.inotify.max_queued_events: "65536"
    fs.inotify.max_user_instances: "8192"
    fs.inotify.max_user_watches: "524288"
    net.core.rmem_max: "2500000"
    net.core.wmem_max: "2500000"
  sysfs:
    devices.system.cpu.intel_pstate.hwp_dynamic_boost: 1
    {% for i in range(0, 4) %}
    devices.system.cpu.cpu{{ i }}.cpufreq.energy_performance_preference: balance_performance
    {% endfor %}
  time:
    disabled: false
    servers: ["time.google.com", "pool.ntp.org"]
  features:
    rbac: true
    stableHostname: true
    apidCheckExtKeyUsage: true
    diskQuotaSupport: true
    kubePrism:
      enabled: true
      port: 7445
    hostDNS:
      enabled: true
      forwardKubeDNSToHost: true
      resolveMemberNames: true
cluster:
  id: op://STONEHEDGES/talos/CLUSTER_ID
  secret: op://STONEHEDGES/talos/CLUSTER_SECRET
  controlPlane:
    endpoint: https://10.1.100.100:6443
  clusterName: main
  discovery:
    enabled: true
    registries:
      kubernetes:
        disabled: false
      service:
        disabled: false
  network:
    cni:
      name: none
    dnsDomain: cluster.local
    podSubnets: ["10.69.0.0/16"]
    serviceSubnets: ["10.96.0.0/16"]
  token: op://STONEHEDGES/talos/CLUSTER_TOKEN
  ca:
    crt: op://STONEHEDGES/talos/CLUSTER_CA_CRT
    key: ""